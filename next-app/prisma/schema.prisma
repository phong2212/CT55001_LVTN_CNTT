generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Destinations {
  id          String @id @default(cuid()) @map("_id")
  name        String
  description String
  continent   String
  country     String
  city        String
  imageURL    String
}

enum UserRole {
  ADMIN
  USER
}

model Users {
  id        String   @id @default(cuid()) @map("_id")
  clerkId   String   @unique
  email     String   @unique
  photo     String
  firstName String?
  lastName  String?
  createdAt Float
  role      UserRole @default(USER)
}

model Blogs {
  id       String @id @default(cuid()) @map("_id")
  authorId String @unique
  title    String
  content  String
  imageURL String

  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @default(now()) @updatedAt @map("updated_at")
}

model Favorite {
  id            String @id @default(cuid()) @map("_id")
  userId        String @unique
  destinationId String @unique
}
