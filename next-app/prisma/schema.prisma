generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum UserRole {
  ADMIN
  USER
}

model Users {
  id        String   @id @default(cuid()) @map("_id")
  clerkId   String   @unique
  email     String   @unique
  photo     String
  firstName String?
  lastName  String?
  createdAt Float
  role      UserRole @default(USER)
}

model Hotels {
  id          String   @id @default(cuid()) @map("_id")
  name        String
  location    String
  city        String
  rating      Float
  description String?
  amenities   Json?
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @default(now()) @updatedAt @map("updated_at")
}

model Rooms {
  id               String   @id @default(cuid()) @map("_id")
  hotelId          String
  roomType         String
  capacityAdults   Int
  capacityChildren Int
  pricePerNight    Float
  numberOfRooms    Int
  createdAt        DateTime @default(now()) @map("created_at")
  updatedAt        DateTime @default(now()) @updatedAt @map("updated_at")
}

model Availability {
  id             String   @id @default(cuid()) @map("_id")
  roomId         String
  date           DateTime
  availableRooms Int
}

model HotelImages {
  id          String  @id @default(cuid()) @map("_id")
  hotelId     String
  imageUrl    String
  description String?
}
